.top-view {
  height: 60px;
  display: flex;
  justify-content: space-between;
}
.top-view text {
  padding-left: 10px;
  padding-top: 15px;
  font-size: 20px;
  font-weight: bolder;
}
.top-view van-button {
  padding-right: 10px;
  padding-top: 15px;
}
.sign-in {
  margin-top: 25px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sign-in input {
  margin-bottom: 10px;
  border: 1px solid #a1a1a1;
  border-radius: 5px;
  width: 250px;
  height: 30px;
}
.sign-in button {
  width: 150px;
  border-radius: 10px;
}
.check {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.check button {
  margin-bottom: 10px;
  width: 350px;
  border-radius: 5px;
  background-color: #f2f5f9;
  height: 35px;
}

